<body>
  <h1>🌟 الموقع الأسطوري لتوليد الوسائط 🌟</h1>
  <p>اكتب وصفك الخيالي وسنقوم بإنشاء صور أو فيديوهات أسطورية 🤯</p>

  <div id="coins">
    💰 Coins: <span id="coinCount">100</span>
    <button id="addCoin" onclick="openStore()">+</button>
  </div>

  <div id="app">
    <input type="text" id="prompt" placeholder="✨ اكتب وصف المحتوى هنا ✨">
    <br>
    <select id="size">
      <option value="512x512">512 × 512</option>
      <option value="768x768">768 × 768</option>
      <option value="1024x1024">1024 × 1024</option>
    </select>
    <br>
    <button onclick="generateImage()">🖼️ أنشئ صورة أسطورية (-15💰)</button>
    <button onclick="generateVideo()">🎬 أنشئ فيديو أسطوري (-25💰)</button>

    <div id="result"></div>
    <img id="preview" src="" alt="Preview">
  </div>

  <footer>
    🌌 جميع الحقوق محفوظة © 2025
  </footer>

  <script>
    let coins = 100;

    function updateCoins(amount) {
      coins -= amount;
      if (coins < 0) coins = 0;
      document.getElementById("coinCount").textContent = coins;
    }

    function openStore() {
      window.open("store.html", "_blank"); // فتح صفحة المتجر
    }

    function typeWriterEffect(text, elementId, speed = 80) {
      let i = 0;
      const element = document.getElementById(elementId);
      element.innerHTML = "";
      function typing() {
        if (i < text.length) {
          element.innerHTML += text.charAt(i);
          i++;
          setTimeout(typing, speed);
        }
      }
      typing();
    }

    function generateImage() {
      const prompt = document.getElementById("prompt").value;
      const size = document.getElementById("size").value;
      const resultDiv = document.getElementById("result");
      const previewImg = document.getElementById("preview");

      if (!prompt) {
        resultDiv.innerHTML = "❌ يرجى كتابة وصف أولاً!";
        return;
      }

      if (coins < 15) {
        resultDiv.innerHTML = "❌ ليس لديك عملات كافية لإنشاء صورة!";
        return;
      }

      updateCoins(15);
      previewImg.style.display = "none";
      resultDiv.innerHTML = '<div class="loader"></div><div id="loadingText" class="blink"></div>';
      typeWriterEffect(`⏳ جاري إنشاء صورة بالحجم ${size} ... ✨`, "loadingText", 80);

      // محاكاة إنشاء الصورة
      setTimeout(() => {
        resultDiv.innerHTML = "✅ تم إنشاء الصورة بنجاح!";
        previewImg.src = "https://via.placeholder.com/512?text=Your+Image"; // رابط مؤقت للمعاينة
        previewImg.style.display = "block";
      }, 3000);
    }

    function generateVideo() {
      const prompt = document.getElementById("prompt").value;
      const resultDiv = document.getElementById("result");
      const previewImg = document.getElementById("preview");

      if (!prompt) {
        resultDiv.innerHTML = "❌ يرجى كتابة وصف أولاً!";
        return;
      }

      if (coins < 25) {
        resultDiv.innerHTML = "❌ ليس لديك عملات كافية لإنشاء فيديو!";
        return;
      }

      updateCoins(25);
      previewImg.style.display = "none";
      resultDiv.innerHTML = '<div class="loader"></div><div id="loadingText" class="blink"></div>';
      typeWriterEffect(`⏳ جاري إنشاء فيديو أسطوري من وصفك ... 🎬`, "loadingText", 80);

      // محاكاة إنشاء الفيديو
      setTimeout(() => {
        resultDiv.innerHTML = "✅ تم إنشاء الفيديو بنجاح!";
        previewImg.src = "https://via.placeholder.com/512?text=Your+Video"; // رابط مؤقت للمعاينة
        previewImg.style.display = "block";
      }, 4000);
    }
  </script>
